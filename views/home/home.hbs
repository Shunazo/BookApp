<div class="card">
  <div class="card-body">
    <h1 class="text-white">{{pageTitle}}</h1>

    <div class="row">
      <form action="/" method="get" class="col-12 col-sm-5 col-md-4">
        <div class="input-group">
          <input type="text" name="search" placeholder="Buscar libro" class="form-control" />
          <button type="submit" class="btn btn-general">
            <i class="bi bi-search"></i> Buscar
          </button>
        </div>
      </form>

      <form action="/" method="get" class="col-12 col-sm-10 col-md-8">
        <div class="input-group">
          <select name="categoria[]" class="form-control js-example-basic-multiple" multiple="multiple">
            <option value="" disabled></option>
            {{#each categorias}}
              <option value="{{this.nombre}}">{{this.nombre}}</option>
            {{/each}}
          </select>

          <button type="submit" class="btn btn-general ms-2">
            <i class="bi bi-funnel"></i> Filtrar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="row">
  {{#each libros}}
    <div class="col-6 col-sm-4 col-md-2">
      <a href="/libros/{{this.id}}" class="text-decoration-none text-reset">
        <div class="card mb-3 h-auto card-hover">
          <img src="{{this.imagePath}}" class="card-img-top img-size" alt="{{this.titulo}}" />
          <div class="card-body">
            <h5 class="card-title text-white text-center">{{this.titulo}}</h5>
            <h6 class="card-subtitle mb-2 text-white text-center">Publicado: {{this.fechaPublicacion}}</h6>
            <h6 class="card-subtitle mb-2 text-white text-center">Categoria: {{this.categoria.nombre}}</h6>
            <h6 class="card-subtitle mb-2 text-white text-center">Autor: {{this.autor.nombre}}</h6>
            <h6 class="card-subtitle mb-2 text-white text-center">Editorial: {{this.editorial.nombre}}</h6>
          </div>
        </div>
      </a>
    </div>
  {{/each}}
</div>



