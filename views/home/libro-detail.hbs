<div class="card">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center">
      <h1 class="text-white">{{pageTitle}}</h1>
    </div>

    <div class="row mt-2 mb-2">
      <div class="col-12 col-sm-4">
        <a href="/" class="btn btn-general">
          <i class="bi bi-x"></i> Volver a la lista
        </a>
      </div>
    </div>
  </div>
</div>

<div class="card mb-3" style="max-width: 700px; margin: auto; height 100px; padding: 60px">
  <div class="card-body">
    <div class="row align-items-center no-gutters">
      <div class="col-4 text-center">
        <img src="{{libro.imagePath}}" alt="Portada de {{libro.titulo}}" class="img-fluid rounded" style="max-height: 250px;" />
      </div>

      <div class="col-8 text-left" style="padding-left: 15px;">
        <h1 class="text-white">{{libro.titulo}}</h1>
        <h3 class="text-white">Publicado: {{libro.fechaPublicacion}}</h3>

        {{#if libro.categoria}}
          <h4 class="text-white mb-1">Categoría: {{libro.categoria.nombre}}</h4>
        {{else}}
          <h4 class="text-white mb-1">Categoría: No disponible</h4>
        {{/if}}

        {{#if libro.autor}}
          <h4 class="text-white mb-1">Autor: {{libro.autor.nombre}}</h4>
        {{else}}
          <h4 class="text-white mb-1">Autor: No disponible</h4>
        {{/if}}

        {{#if libro.editorial}}
          <h4 class="text-white mb-1">Editorial: {{libro.editorial.nombre}}</h4>
          <h4 class="text-white mb-1">País: {{libro.editorial.pais}}</h4>
          <h4 class="text-white mb-1">Teléfono: {{libro.editorial.telefono}}</h4>
        {{else}}
          <h4 class="text-white mb-1">Editorial: No disponible</h4>
        {{/if}}
      </div>
    </div>
  </div>
</div>



