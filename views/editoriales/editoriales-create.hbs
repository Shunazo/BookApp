<div class="row align-items-center">
    <div class="col-12 col-sm-6 offset-sm-3">
        <div class="card">
            <div class="card-body">
                <h1 class="text-info text-center">{{pageTitle}}</h1>
                <br>
                <form method="POST" action="/editoriales/create" novalidate>
                   
                    <div class="mb-3">
                        <label for="nombre" class="form-label text-muted">Nombre de la Editorial</label>
                        <input type="text" class="form-control text-info" id="nombre" name="nombre" required />
                    </div>

                    <div class="mb-3">
                        <label for="telefono" class="form-label text-muted">Telefono</label>
                        <input type="tel" class="form-control text-info" id="telefono" name="telefono"
                            value="{{editorial.telefono}}" required 
                            maxlength="12" pattern="\d{3}-\d{3}-\d{4}" 
                            title="Phone number format: 000-000-0000" 
                            placeholder="000-000-0000" 
                            oninput="formatPhoneNumber(this)" />
                        </div>

                    <div class="mb-3">
                        <label for="pais" class="form-label text-muted">Pais</label>
                        <input type="text" class="form-control text-info" id="pais" name="pais" required />
                    </div>

        
                    <button type="submit" class="btn btn-info float-end" onclick="confirmCreateOrEdit(this, event)">
                        <i class="bi bi-check"></i> Guardar</button>
                    <a href="/editoriales" class="btn btn-secondary float-end me-2">
                        <i class="bi bi-x"></i>Volver a la lista</a>
                </form>
            </div>
        </div>
    </div>
</div>
